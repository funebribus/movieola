<h1>Listing ators</h1>

<table>
  <thead>
    <tr>
      <th>Ator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ators.each do |ator| %>
      <tr>
        <td><%= ator.ator %></td>
        <td><%= link_to 'Show', ator %></td>
        <td><%= link_to 'Edit', edit_ator_path(ator) %></td>
        <td><%= link_to 'Destroy', ator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ator', new_ator_path %>
